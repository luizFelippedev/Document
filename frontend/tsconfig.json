{
  "compilerOptions": {
    "target": "ES2022", // Ou "ESNext"
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
    // Removido "plugins": [{ "name": "next" }] pois não é para tsconfig.json
    ,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    ".next/types/**/*.ts",
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
    // Adicione outros diretórios que não devem ser verificados pelo TS, se houver
    // Ex: "e2e" se seus testes Playwright estiverem lá e não forem verificados pelo TS
  ]
}
